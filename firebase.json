{
	"hosting": {
		"public": "public",
		"cleanUrls": true,
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"headers": [
			{
				"source": "**/*.@(eot|otf|ttf|ttc|woff|woff2|css)",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "*"
					}
				]
			},
			{
				"source": "**/*.@(js|json|jpg|jpeg|gif|png|ico)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=604800"
					}
				]
			}
		]
	}
}
